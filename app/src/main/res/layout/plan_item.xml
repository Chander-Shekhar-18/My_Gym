<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtName44"
            android:layout_alignParentTop="true"
            android:text="Training Name"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/trainingImage"
            android:id="@+id/emptyCircle"
            android:layout_below="@+id/txtName44"
            android:src="@drawable/ic_empty_circle"
            android:layout_toRightOf="@+id/trainingImage" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/trainingImage"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/checkedCircle"
            android:src="@drawable/ic_checked_circle"
            android:layout_toRightOf="@+id/trainingImage" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/trainingImage"
            android:layout_below="@+id/txtName44"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTimeDescription"
            android:layout_below="@+id/trainingImage"
            android:layout_marginTop="10dp"
            android:text="Time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTime"
            android:layout_below="@+id/trainingImage"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/txtTimeDescription"
            android:text="Minutes"
            android:layout_toRightOf="@+id/txtTimeDescription"
            android:layout_marginLeft="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDescription69"
            android:layout_below="@+id/txtTimeDescription"
            android:layout_marginTop="10dp"
            android:text="Description"/>




    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>